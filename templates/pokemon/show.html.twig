{% extends 'base.html.twig' %}

{% block title %}{{ pokemon.name|pokemon_lv|capitalize }} - Pokémonu meklētājs{% endblock %}

{% block body %}
<div class="container">
    <div class="detail-back">
        <a href="{{ path('app_pokemon_list') }}">&larr; Atpakaļ uz sarakstu</a>
    </div>

    <div class="detail-card">
        <div class="detail-card-inner">
        <div class="detail-header">
            {% if pokemon.sprite %}
                <img src="{{ pokemon.sprite }}" alt="{{ pokemon.name|pokemon_lv|capitalize }}" class="detail-sprite">
            {% else %}
                <div class="detail-sprite-placeholder">No Image</div>
            {% endif %}

            <div class="detail-title">
                <h1>{{ pokemon.name|pokemon_lv|capitalize }}</h1>
                <p class="detail-id">#{{ pokemon.id }}</p>

                <div class="detail-types">
                    {% for type in pokemon.types %}
                        <span class="type-badge type-{{ type }}">{{ type|type_lv|upper }}</span>
                    {% endfor %}
                </div>

                <form method="post" action="{{ path('app_favorites_toggle') }}" class="detail-favorite-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('fav_' ~ pokemon.name) }}">
                    <input type="hidden" name="pokemon_name" value="{{ pokemon.name }}">
                    <button type="submit" class="detail-favorite-btn {% if isFavorite %}is-favorite{% endif %}">
                        {% if isFavorite %}
                            ★ Noņemt no favorītiem
                        {% else %}
                            ☆ Pievienot favorītiem
                        {% endif %}
                    </button>
                </form>
            </div>
        </div>

        <div class="detail-body">
            <section class="detail-section">
                <h2>Pamatstatistika</h2>
                <div class="stats-grid">
                    {% set statLabels = {
                        'hp': 'HP',
                        'attack': 'Uzbrukums',
                        'defense': 'Aizsardzība',
                        'special-attack': 'Spec. uzbrukums',
                        'special-defense': 'Spec. aizsardzība',
                        'speed': 'Ātrums'
                    } %}
                    {% for statName, statValue in pokemon.stats %}
                        <div class="stat-item">
                            <span class="stat-name">{{ statLabels[statName] ?? statName|replace({'-': ' '})|title }}</span>
                            <div class="stat-bar-track">
                                <div class="stat-bar-fill" style="width: {{ min(statValue / 255 * 100, 100) }}%"></div>
                            </div>
                            <span class="stat-value">{{ statValue }}</span>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <section class="detail-section">
                <h2>Spējas</h2>
                <div class="abilities-list">
                    {% for ability in pokemon.abilities %}
                        <span class="ability-tag">{{ ability|replace({'-': ' '})|title }}</span>
                    {% endfor %}
                </div>
            </section>
        </div>
        </div>
    </div>
</div>
{% endblock %}
