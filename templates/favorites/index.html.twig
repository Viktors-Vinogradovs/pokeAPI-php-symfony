{% extends 'base.html.twig' %}

{% block title %}Mani favorīti - Pokémonu meklētājs{% endblock %}

{% block javascripts %}
    {% if pokemonList|length > 0 %}
        <script src="{{ asset('carousel.js') }}"></script>
    {% endif %}
{% endblock %}

{% block body %}
<div class="container">
    <header class="page-header">
        <h1>Mani favorīti</h1>
        <p class="subtitle">
            {% if pokemonList|length > 0 %}
                {{ pokemonList|length }} saglabātie Pokémoni
            {% else %}
                Vēl nav favorītu
            {% endif %}
        </p>
    </header>

    <main>
        {% if pokemonList|length > 0 %}
            <div class="favorites-carousel">
                <div class="carousel-controls">
                    <button type="button" class="carousel-prev" aria-label="Iepriekšējais">← Iepriekšējais</button>
                    <span class="carousel-index">1 / {{ pokemonList|length }}</span>
                    <button type="button" class="carousel-next" aria-label="Nākamais">Nākamais →</button>
                </div>
                <div class="carousel-viewport">
                    <div class="carousel-track">
                        {% for pokemon in pokemonList %}
                            <div class="carousel-slide">
                                {{ include('pokemon/_pokemon_card.html.twig', {pokemon: pokemon, favorites: favorites, variant: 'large'}) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <h2>☆ Vēl nav favorītu</h2>
                <p>Tu vēl neesi pievienojis neviens Pokémon saviem favorītiem.</p>
                <p>Pārlūko Pokémonu sarakstu un noklikšķini uz zvaigznes, lai pievienotu favorītus!</p>
                <a href="{{ path('app_pokemon_list') }}" class="button-primary">Pārlūkot Pokémonus</a>
            </div>
        {% endif %}
    </main>
</div>
{% endblock %}
